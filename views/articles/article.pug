extends ../layout

block content
  h1= article.title
  h5 written by #{author}
  p= article.body
  if user
    if user.id == article.author
      a.btn.btn-primary(href='/articles/edit/' + article._id) Edit 
      a.btn.btn-danger(onclick="return confirmDelete()" href='/articles/delete/' + article._id) Delete
