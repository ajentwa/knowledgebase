extends ../layout

block content
  .row
    .col-sm-4
    .col-sm-4
      .panel.panel-default
        .panel-heading
          h3= title
        form(method='POST', action='/users/login')
          .form-group.input-group
            .input-group-prepend
              span#basic-addon1.input-group-text 
                span.fa.fa-user
            input.form-control(type='text', name='username', aria-describedby='basic-addon1')
          .form-group.input-group
            .input-group-prepend
              span#basic-addon2.input-group-text
                span.fa.fa-lock 
            input.form-control(type='password', name='password', aria-describedby='basic-addon2')
          input.btn.btn-primary.btn-block(type='submit', value='Login')
    .col-sm-4
      
      
